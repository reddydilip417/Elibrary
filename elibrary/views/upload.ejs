     <div class="col-md-8 col-xl-8 col-xl-offset-2">
         <ul>
          <!-- User Card
          ================================================== -->
        <%  for (var i =0; i<book.length; ++i){  %>
             <li>
          <div class="card card-inverse card-social text-xs-center">
            <div class="card-block has-gradient">
              
                <p class="card-subtitle"><b>Name:</b> <%= book[i].bookname %>  <b>FileName:</b> <%= book[i].file %> </p>
              <p class="card-subtitle"><b>Author:</b> <%= book[i].authorname %> , <b>Category:</b> <%= book[i].category %>, <b>Cost:</b><%= book[i].cost.toFixed(2) %>  </p>
                
            </div>
            
          </div>

          <hr class="invisible">
             </li>
        <%  }  %>
             
